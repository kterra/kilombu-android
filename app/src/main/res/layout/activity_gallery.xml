<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="horizontal"
    android:paddingBottom="30dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="30dp"
    android:alignmentMode="alignMargins"
    android:useDefaultMargins="true"
    tools:context="kilombu.kilombuapp.GalleryActivity">
    <Button
        android:text="@string/profile"
        android:id="@+id/button1"
        android:layout_gravity="fill_horizontal"
        android:drawableTop="@drawable/ic_white_afro_profile"
        android:drawablePadding="7dp"
        android:paddingTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="20dp"
        android:background="@drawable/gallery_button"
        android:textColor="@color/button_text_color"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:layout_columnWeight="1"

        />
    <Button

        android:text="@string/businessProfile"
        android:id="@+id/button2"
        android:layout_gravity="fill_horizontal"
        android:drawableTop="@drawable/ic_white_afro_profile"
        android:drawablePadding="7dp"
        android:paddingTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="20dp"
        android:textColor="@color/button_text_color"
        android:background="@drawable/gallery_button"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_columnWeight="1"
        />

    <Button
        android:text="@string/create_new_business"
        android:id="@+id/business_form_button"
        android:layout_gravity="fill_horizontal"
        android:drawableTop="@drawable/ic_white_afro_profile"
        android:layout_margin="5dp"
        android:drawablePadding="7dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/button_text_color"
        android:background="@drawable/gallery_button"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_columnWeight="1"
        android:onClick="goToNewBusinessForm"
        />

    <!--<Button














        />-->

</GridLayout>

