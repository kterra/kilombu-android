<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/scrollview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/navigate_back_layout">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_navigate_back_black_36dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/navigate_back"
            android:textColor="@color/colorDescription"
            android:text="@string/navigate_back"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:onClick="previousPage"/>


    </android.support.v7.widget.LinearLayoutCompat>


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/scrollview"
        android:id="@+id/navigate_next_layout"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textAllCaps="true"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/navigate_next"
            android:textColor="@color/colorDescription"
            android:text="@string/navigate_next"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:onClick="nextPage"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_navigate_next_black_36dp"
            android:layout_gravity="center_vertical"/>

    </android.support.v7.widget.LinearLayoutCompat>

</RelativeLayout>